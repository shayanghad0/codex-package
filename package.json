  "author": "File Sharing App Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/shayanghad0/package"
  },
  "bugs": {
    "url": "https://github.com/shayanghad0/package"
  },
  "homepage": "https://github.com/your-username/file-sharing-app#readme",
  "dependencies": {
    "archiver": "^7.0.1",
    "bcrypt": "^5.1.1",
    "ejs": "^3.1.9",
